.layout {
  padding-top: 40px;
  margin-bottom: 70px;
}
.form .heading{
  position: relative;
}
.form .heading::after{
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 50px;
  height: 2px;
  background-color: #171776;
}
.button--min-width {
  width: 100%;
}
.footer {
  color: #fff;
  background-color: #3a2a2f;
}
.form__floating-label {
  top: -5px;
  font-size: 0.75rem;
}
.footer__aside-item--copyright {
  font-size: 0.25rem;
}
.hidden-pocket br {
  display: none;
}
.footer__wrapper{
  padding: 50px 0 10px;
}
.footer__wrapper {
  border-top: 0;
}
.nav-bar {
  background-color: #171776;
  color: #fff;
}
.nav-bar:after {
  position: static;
}