}
.delivery_tut p {
  padding-left: 20px;
}
.delivery_tut table {
  margin-left: 20px;
  margin-bottom: 20px;
}
.delivery_tut table th {
  border: 1px solid #333;
  padding: 10px 0;
}
.delivery_tut table td {
  border: 1px solid #333;
  padding: 10px 40px;
}
@media screen and (max-width: 999px) {
  .delivery_tut table th {
  padding: 5px 0;
  }
  .delivery_tut table td {
    padding: 10px 20px;
  }
}
@media screen and (max-width: 640px) {
  .delivery_tut p {
    padding-left: 0px;
  }
  .delivery_tut table {
    margin-left: 0px;
  }
  .delivery_tut table td {
    padding: 10px 5px;
  }
}
