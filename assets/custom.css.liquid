.layout {
  padding-top: 40px;
  margin-bottom: 70px;
}
.form .heading{
  position: relative;
}
.form .heading::after{
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 50px;
  height: 2px;
  background-color: #171776;
}
.button--min-width {
  width: 100%;
}
.footer {
  color: #fff;
  background-color: #3a2a2f;
}
.form__floating-label {
  top: -5px;
  font-size: 0.75rem;
}
.footer__aside-item--copyright {
  font-size: 0.25rem;
}
.hidden-pocket br {
  display: none;
}
.footer__wrapper{
  padding: 50px 0 10px;
}
.footer__wrapper {
  border-top: 0;
}
.nav-bar {
  background-color: #171776;
  color: #fff;
}
.nav-bar:after {
  position: static;
}
.container--narrow {
  max-width: 1120px;
}
.order_tut {
  width: 100%;
  max-width: 1120px;
  margin: 0 auto;
}
.order_tut h3 {
  background-color: #171776;
  color: #fff !important;
  padding: 10px 20px;
  font-weight: bold !important;
}
.order_tut_area {
  display: flex;
  justify-content: space-between;
}
.order_tut_area .order_tut_box{
  width: 22%;
}
.order_tut_area .order_tut_box p {
  text-align: center;
  margin-bottom: 0;
  color: #171776;
  font-weight: bold;
}
.order_tut_area .order_tut_box img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  object-position: center;
  margin-bottom: 20px;
}
@media screen and (max-width: 999px) {
  .order_tut_area {
    display: block;
  }
  .order_tut_area .order_tut_box{
    width: 100%;
    margin: 0 auto;
    margin-bottom: 20px;
  }
}
.faq{
  max-width: 1120px;
  margin: 40px auto 70px;
}
@media screen and (min-width: 641px) {
  .faq {
    margin: 70px auto 115px;
  }
}
.pay_tut {
  width: 100%;
  max-width: 1120px;
  margin: 0 auto;
}
.pay_tut h3 {
  background-color: #171776;
  color: #fff !important;
  padding: 10px 20px;
  font-weight: bold !important;
  margin-bottom: 40px !important;
}
.pay_tut h4 {
  background-color: #fff;
  color: #333 !important;
  padding: 10px 20px;
  font-weight: bold !important;
}
.pay_tut p {
  padding-left: 20px;
}
.pay_tut .pay_card {
  display: flex;
  column-gap: 20px;
  padding-left: 20px;
  margin-bottom: 40px !important;
}
.pay_tut .pay_card img{
  width: 100px;
  height: 50px;
  object-fit: cover;
  object-position: center;
}
.pay_tut table{
  margin-left: 20px;
  margin-bottom: 10px;
}
.pay_tut table th {
  text-align: center;
  padding: 10px 80px;
  border: 1px #333 solid;
}
.pay_tut table td {
  text-align: end;
  padding: 10px;
  border: 1px #333 solid;
}
@media screen and (max-width: 640px) {
  .pay_tut p {
    padding-left: 0px;
  }
  .pay_tut .pay_card {
    column-gap: 10px;
    padding-left: 0px;
  }
  .pay_tut .pay_card img{
    width: 70px;
    height: 25px;
  }
  .pay_tut table{
    margin-left: 0px;
  }
  .pay_tut table th {
    padding: 10px 20px;
  }
}
.delivery_tut {
  width: 100%;
  max-width: 1120px;
  margin: 0 auto;
}
.delivery_tut h3 {
  background-color: #171776;
